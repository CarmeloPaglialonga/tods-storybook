{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es5", "es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist/components",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["sr/**/*", "placeholder.ts"],
  "exclude": ["node_modules", "**/*.stories.js"],
}